<% include header %>

    <section id="bread">
        <div class="bread flex">
            <div>
                <p><a href="/">Главная</a> / Результаты поиска</p>
            </div>
        </div>
    </section> 
    
    <section id="searchRes">
        <div class="searchRes">
            <h1>Результаты поиска:</h1>
        </div>
    </section>
    
    <section id="popular" style="padding-top: 1.5rem;">
        <div class="popular loop row">
            <% products.forEach(function(product) { %>
                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <span><img src="<%= product.image %>" alt="" onclick="goto('/products/<%= product._id %>');"></span>
                    <h1><%= product.name %></h1>
                    <h2><%= product.cat %></h2>
                    <h3>$<%= product.price %>.00 <span>$<%= product.price * 1.2 %>.00</span></h3>
                    <div>
                        <a href="/addtocart?product=<%= product._id %>" class="btn btn-green">В корзину</a>
                        <a href="/buytocart?product=<%= product._id %>" class="btn btn-gray">Купить</a>
                    </div>
                </div>
            <% }); %>
        </div>
    </section>
 
    <section id="posts" class="embed"style="background: #fff; padding-top: 0rem;">
        <div class="posts row">
            <% posts.forEach(function(post) {  %>
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="post flex">
                        <img src="<%= post.image %>" alt="" onclick="goto('/post/<%= post._id %>');">
                        <h1><%= post.name %></h1>
                        <p><%= post.short %></p>
                        <a href="/post/<%= post._id %>" class="btn btn-gray">Подробнее</a>
                    </div>
                </div>
            <% }); %>
            <% complexes.forEach(function(complex) {  %>
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="post flex">
                        <img src="<%= complex.image %>" alt="" onclick="goto('/post/<%= complex._id %>');">
                        <h1><%= complex.name %></h1>
                        <p><%= complex.short %></p>
                        <a href="/complex/<%= complex._id %>" class="btn btn-gray">Подробнее</a>
                    </div>
                </div>
            <% }); %>
        </div>
    </section>

    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
        crossorigin="anonymous"></script>
    <script>
        function goto(url) { window.location.href = url; }
        
        $(".cat").click((event) => {
            var ccat = $(event.currentTarget);
            var cat = ccat.attr("cat");
            ccat.toggleClass("active");
            $(".sub").each(function (index) {
                console.log(index);
                if ($(this).attr("sub") == cat) {
                    $(this).toggleClass("open");
                }
            });
        });
    </script>
<% include footer %>