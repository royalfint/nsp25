<% include ../dheader %>

<form class="prod" action="/dashboard/posts/<%= post.id %>?_method=PUT" method="POST">
    <h1>Редактирование Поста</h1>
    <input type="text" placeholder="Имя новой статьи" name="name" value="<%= post.name %>">
    <input type="text" placeholder="Ссылка на картинку статьи" name="img" value="<%= post.image %>">
    <input type="text" placeholder="Категория статьи" name="cat" value="<%= post.cat %>">
    <input type="text" placeholder="Краткое описание" name="short" value="<%= post.short %>">
    <textarea placeholder="Содержание статьи" name="desc"><%- post.desc %></textarea>
    <div class="flash" style="margin: 1.5rem 0 0 0; ">
        <% if(error && error.length > 0) { %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
        <% } if(success && success.length > 0) { %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>
    </div>
    <button class="smooth">Обновить</button>
</form>

<% include ../dfooter %>